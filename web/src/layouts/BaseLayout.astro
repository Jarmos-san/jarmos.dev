---
import HeadLayout from "../layouts/HeadLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/resets.css";
import "../styles/fonts.css";
import "../styles/scrollbar.css";

interface Props {
  title: string;
  description: string;
  slug?: string;
  imageUrl: URL;
  imageAlt: string;
}

const { description, slug, title, imageUrl, imageAlt } = Astro.props;
---

<style lang="scss">
  html {
    background-color: #111a20;
    font-family:
      "Poppins",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>

<html lang="en">
  <HeadLayout
    title={title}
    description={description}
    slug={slug ? slug : ""}
    imageUrl={imageUrl}
    imageAlt={imageAlt}
  />
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

