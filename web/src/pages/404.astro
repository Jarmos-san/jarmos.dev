---
import BaseLayout from "../layouts/BaseLayout.astro";

const description = `Somraj Saha is a Senior Software Engineer building Weburz,
  a company offering web solutions to small-scale business owners looking to
  expand their business operations on the Internet.
`;
---

<style>
  @media screen and (min-width: 320px) and (max-width: 767px) {
    article {
      padding: 0 8% 0 8%;
      margin: 10% 0 10% 0%;
    }
  }

  @media screen and (min-width: 768px) {
    article {
      margin: 5% 15% 5% 15%;
    }
  }

  article {
    color: #ecf8ff;
    display: flex;
    flex-direction: column;
    gap: 15px;

    h1 {
      color: #b0fbbc;
      font-weight: bold;
      font-size: 3rem;
      line-height: 142%;
      text-shadow: 0 0 4.75rem rgba(188, 251, 195, 0.3);
    }

    code {
      background: #2d2d2d;
      padding: 0.2em 0.4em;
      border-radius: 4px;
      font-family: monospace;
    }

    a {
      color: #ecf8ff;
      text-underline-offset: 5px;
      text-decoration-thickness: 2px;

      &:hover {
        color: #b0fbbc;
      }
    }
  }
</style>

<BaseLayout
  title="About Me"
  description={description}
  imageAlt="The logo of Somraj Saha's personal website"
  imageUrl={new URL(
    "https://ik.imagekit.io/jarmos/logo.png?updatedAt=1703675914287"
  )}
>
  <article>
    <h1>404: Page Not Found</h1>

    <p>
      You were looking for the route <code>{Astro.url.pathname}</code>
      which does not exist!
    </p>

    <p>Let's get back <a href="/">Home</a></p>
  </article>
</BaseLayout>
