---
import BaseLayout from "../layouts/BaseLayout.astro";

const description = `
  The privacy policy of Somraj Saha's personal wesbite.
`;
---

<style lang="scss">
  @media screen and (min-width: 320px) and (max-width: 767px) {
    article {
      padding: 0 8% 0 8%;
      margin: 10% 0 10% 0%;
    }
  }

  @media screen and (min-width: 768px) {
    article {
      margin: 5% 15% 5% 15%;
    }
  }

  article {
    color: #ecf8ff;

    a {
      color: #ecf8ff;
      text-underline-offset: 4px;
      text-decoration-thickness: 2px;
    }

    h1 {
      color: #ecf8ff;
      font-family: Poppins;
      font-size: 2rem;
      font-style: normal;
      font-weight: 700;
      line-height: 142%;
      margin-bottom: 2rem;
    }

    h2 {
      color: #ecf8ff;
      font-family: Poppins;
      font-size: 1.5rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      margin: 1.5rem 0;
    }

    p {
      color: #ecf8ff;
      margin-bottom: 1rem;
    }

    ol {
      color: #ecf8ff;
      list-style-type: decimal;
      padding: 1.25rem;
      line-height: 180%;
    }
  }
</style>

<BaseLayout title="Privacy Policy" description={description}>
  <article>Hello World!</article>
</BaseLayout>
