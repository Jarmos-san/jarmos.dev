---
import HeadLayout from "../layouts/HeadLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/resets.css";
import "../styles/fonts.css";
import "../styles/scrollbar.css"

interface Props {
  description: string;
  title: string;
}

const { description, title } = Astro.props;
---

<style lang="scss">
  html {
    background-color: #111a20;
    font-family:
      "Poppins",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>

<html lang="en">
  <HeadLayout title={title} description={description} />
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
